            <TextArea fx:id="txtInfo" layoutX="19.0" layoutY="67.0" prefHeight="192.0" prefWidth="562.0" text="None" AnchorPane.bottomAnchor="58.0" AnchorPane.leftAnchor="19.0" AnchorPane.rightAnchor="19.0" AnchorPane.topAnchor="67.0">
